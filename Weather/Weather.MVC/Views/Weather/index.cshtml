@model Weather.MVC.ViewModels.ForecastViewModel
@{

    ViewBag.Title = "index";
}

@Html.ValidationSummary(true)
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="body-content form-group" >

        @Html.LabelFor(model => model.Name, new { @class = "form-control" })
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control"  } })
        @Html.ValidationMessageFor(model => model.Name, String.Empty, new { @class = "text-danger" })
        <p>
            <input type="submit" value="Välj Plats" />
        </p>
    </div>
}
@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")

    
}